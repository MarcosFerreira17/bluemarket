@model bluemarket.DTO.CategoriaDTO

@{
    Layout = "_LayoutAdmin";
}
<h2>Nova Categoria</h2>
<form class="form-horizontal" asp-action="Salvar" asp-controller="Categorias" method="POST">

    <input type="hidden" asp-for="Id" value="0">

    <label asp-for="Nome">Nome</label>
    <input class="form-control" type="text" asp-for="Nome" placeholder="Nome"><br>
    <span asp-validation-for="Nome"></span>
    <button class="btn btn-success">Cadastrar</button>
</form>
