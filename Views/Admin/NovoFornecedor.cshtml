@model bluemarket.DTO.FornecedorDTO

@{
    Layout = "_LayoutAdmin";
}
<h2>Novo Fornecedor</h2>
<form class="form-horizontal" asp-action="Salvar" asp-controller="Fornecedor" method="POST">
    <input type="hidden" asp-for="Id" value="0">
    <label asp-for="Nome">Nome</label>
    <input class="form-control" type="text" asp-for="Nome" placeholder="Nome do fornecedor">
    <span asp-validation-for="Nome"></span><br>
    <label asp-for="Email">Email</label>
    <input class="form-control" type="text" asp-for="Email" placeholder="Email@dofornecedor.com">
    <span asp-validation-for="Email"></span><br>
    <label asp-for="Telefone">Telefone</label>
    <input class="form-control" type="text" asp-for="Telefone" placeholder="(xx) x xxxx-xxxx"><br>
    <button class="btn btn-success">Cadastrar</button>
</form>
