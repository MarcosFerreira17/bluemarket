@model IEnumerable<bluemarket.Models.Promocao>
@{
    Layout = "_LayoutAdmin";
}
<h2>Nova Promoção</h2>
<a asp-action="NovaPromocao" asp-controller="Admin" class="btn btn-success">Criar nova Promoção</a>
<hr>

<script>
    $(document).ready(function () { $('#promocoes').DataTable(); });
</script>

<table id="promocoes" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Produto</th>
            <th>Porcentagem</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var promocao in Model)
        {
            <tr>
                <td>@promocao.Id</td>
                <td>@promocao.Nome</td>
                <td>@promocao.Produto.Nome</td>
                <td>@promocao.Porcentagem</td>

                <td><a href="/Admin/EditarPromocao/@promocao.Id" class="btn btn-primary">Editar</a>
                    <form asp-action="Deletar" asp-controller="Promocao" style="display: inline;">
                        <input type="hidden" name="id" id="id" value="@promocao.Id">
                        <button class="btn btn-danger">Deletar</button>
                    </form>

                </td>
            </tr>
        }
    </tbody>
</table>