@model bluemarket.DTO.CategoriaDTO

@{
    Layout = "_LayoutAdmin";
}
<h2>Editar Categoria</h2>
<form class="form-horizontal" asp-controller="Categorias" asp-action="Atualizar" method="POST">

    <input type="hidden" asp-for="Id">

    <label asp-for="Nome">Nome</label>
    <input class="form-control" type="text" asp-for="Nome" placeholder="Nome da categoria"><br>
    <span asp-validation-for="Nome"></span>
    <button class="btn btn-success">Atualizar</button>
</form>
